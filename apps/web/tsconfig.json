{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "components/*": ["components/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "next.config.js",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "schemas/User.ts",
    "app/api/[...nextauth]/route.ts",
    "app/api/auth/[...nextauth]/route.ts"
  ],
  "exclude": ["node_modules"]
}
